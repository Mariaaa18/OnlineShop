@using global::Shared.Models
@inherits LayoutComponentBase
@inject NavigationManager NavManager

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            <img  style="width: 44px; float: right" src="https://static.thenounproject.com/png/1709580-200.png" @onclick="@(() => NavManager.NavigateTo("/ShoppingCart"))"/>
            <img style="width: 44px; float: right" src="https://static.thenounproject.com/png/1364418-200.png" @onclick="@(() => NavManager.NavigateTo("/Login"))"/>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>