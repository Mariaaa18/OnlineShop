
@using HttpClients.ClientInterfaces
@inject NavigationManager navMgr
@inject IUserService authService

<AuthorizeView>
    <Authorized>
        <img style="width: 30px" src="../icons/log-out.png" @onclick="Logout"/>
    </Authorized>
    <NotAuthorized>
        <img style="width: 30px" src="../icons/log-in.png" @onclick="Login"/>
    </NotAuthorized>
</AuthorizeView>


@code {
    
    private void Login()
    {
        navMgr.NavigateTo("/Login");
    }

    private async Task Logout()
    {
        await authService.LogoutAsync();
        navMgr.NavigateTo("/");
    }
}